<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper SYSTEM "http://mybatis.org/dtd/mybatis-3-mapper.dtd" PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN">

-<mapper namespace="board.dao.BoardDAO">


-<resultMap id="boardMap" type="boardVO">

<result property="viewCnt" column="view_cnt"/>

<result property="regDate" column="reg_date"/>

</resultMap>

<!-- 특정번호 게시글 삭제 -->


<delete id="deleteByNo" parameterType="int">delete from t_boardwhere no = #{no} </delete>

<!-- 특정번호 게시글 조회 -->


<select id="selectByNoAll" parameterType="int" resultMap="boardMap">select no, title, writer, content, view_cnt, to_char(reg_date, 'yyyy-mm-dd') as reg_datefrom t_boardwhere no = #{no} </select>

<!-- 특정 게시글 수정 -->


<update id="editByNo" parameterType="boardVO">update t_board set title= #{title}, content= #{content}where no= #{no} </update>

<!-- 전체게시글 조회 -->


<select id="selectAll" resultType="boardVO">select no, title, writer, to_char(reg_date, 'yyyy-mm-dd') as regDatefrom t_boardorder by no desc </select>

<!-- 게시글 삽입 -->


<insert id="insert" parameterType="boardVO">insert into t_board(no, title, writer, content)values(seq_t_board_no.nextval, #{title}, #{writer}, #{content}) </insert>

</mapper>